package lambdaEg;

interface Drawable{  
    public void draw();  
}  
public class LambdaExample {  
    public static void main(String[] args) {  
        int width=125;  
  
        //without lambda, Drawable implementation using anonymous class  
        Drawable d2=()->{  
         
            	System.out.println("Drawing "+width);
        
        };  
        d2.draw();  
    }  
}


